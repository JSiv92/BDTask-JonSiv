@model BDTask_JonSiv.Models.DB.Customer

@{
    ViewData["Title"] = "Create Customer";
}

<h1>Create Customer</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="createForm" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            <!--confirmation box hidden by default-->
            <div id="confirmationMessage" style="color: red; display: none;">
                Customer added successfully
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List of Customers</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<!--confirmation message Javascript-->
<script>
    var form = document.getElementById("createForm");
    var confirmationMessage = document.getElementById("confirmationMessage");

    form.addEventListener("submit", function (event) {
        event.preventDefault(); //prevent the default form submission

        //shows the confirmation message
        //then call the submit function after 1 sec
        confirmationMessage.style.display = "block";

        setTimeout(function () {
            form.submit();
        }, 1000);

    });
</script>